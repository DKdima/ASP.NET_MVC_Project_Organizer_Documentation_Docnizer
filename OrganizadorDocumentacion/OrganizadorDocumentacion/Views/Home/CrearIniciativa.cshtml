@{
    ViewData["Title"] = "Crear Iniciativa";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <!-- Otras etiquetas meta -->
    <link rel="stylesheet" href="~/css/creariniciativa.css" />
    <style>
        /* Estilos generales */
        .formulario {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .input-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .form-control {
            width: 70%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .smaller-input {
            width: 30%;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        /* Estilos para los campos y subcampos */
        .campo, .subcampo {
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 10px;
            margin-bottom: 15px;
            background-color: #fff;
        }

            .campo input[type="text"],
            .subcampo input[type="text"],
            .campo input[type="number"],
            .subcampo input[type="number"] {
                width: calc(70% - 20px); /* Calculamos el ancho del input restando el padding */
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
                margin-bottom: 10px;
                box-sizing: border-box;
            }

            .campo button,
            .subcampo button {
                margin-top: 10px;
                margin-bottom:10px;
                padding: 8px 16px;
                border: none;
                border-radius: 4px;
                background-color: #007bff;
                color: #fff;
                cursor: pointer;
            }

                .campo button:hover,
                .subcampo button:hover {
                    background-color: #0056b3;
                }

        #btn-agregar-campo {
            padding: 10px 20px;
            margin-bottom:10px;
            border: none;
            border-radius: 4px;
            background-color: #28a745; /* Verde */
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            #btn-agregar-campo:hover {
                background-color: #218838; /* Verde más oscuro al pasar el ratón */
            }

    </style>
</head>

<body>
    <div class="formulario">
        <form id="iniciativaForm" action="../GuardarIniciativa" method="POST">
            <div class="input-group">
                <label for="nombre">Nombre Iniciativa:&nbsp;&nbsp;</label>
                <input type="text" class="form-control smaller-input" id="nombreIniciativa" required>
                <button type="submit" class="btn btn-primary mr-2 btn-guardar">Guardar</button>
            </div>
            <br />
            <div id="contenedor-campos">
                <!-- Aquí se generarán los campos y subcampos -->
            <button type="button" id="btn-agregar-campo">Agregar Campo</button>
            </div>
        </form>
    </div>
    <!-- Mi Script -->
    <script src="~/js/creariniciativa.js" asp-append-version="true"></script>
</body>
</html>
